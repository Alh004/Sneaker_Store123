@page
@model PrivacyModel
@{
    ViewData["Title"] = "Kontakt SneakerStore";
}
<h1>@ViewData["Title"]</h1>

<div class="contact-section">
    <h2>Kontakt Os</h2>
    <p>Vi er altid klar til at hjælpe dig med eventuelle spørgsmål eller bekymringer. Du kan kontakte os via følgende metoder:</p>
    <h3>Adresse</h3>
    <p>SneakerStore</p>
    <p>Puddi Street</p>
    <p>Shoe City</p>
    <h3>Telefon</h3>
    <p>+ 456 7890</p>
    <h3>Email</h3>
    <p>Mayaddi@sneakerstore.com</p>
    <h3>Åbningstider</h3>
    <p>Mandag - Fredag: 10:00 - 18:00</p>
    <p>Lørdag: 10:00 - 16:00</p>
    <p>Søndag: Lukket</p>
</div>

<a href="/" class="btn btn-primary">Tilbage til forside</a>

<style>
    .contact-section {
        margin-top: 20px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 5px;
        text-align: left;
    }
    .contact-section h2, .contact-section h3 {
        margin-bottom: 15px;
    }
    .contact-section p {
        margin-bottom: 15px;
        line-height: 1.6;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .btn-primary {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
        text-decoration: none;
        border-radius: 5px;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>