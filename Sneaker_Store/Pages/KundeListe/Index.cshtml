@page
@using Sneaker_Store.Model;
@model Sneaker_Store.Pages.KundeListe.IndexModel
@{
}
<h1 class="jumbotron">Vis Alle Kunder</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <form method="post">
            <th><input type="submit" asp-page-handler="SortNumber" value="Kunde Nummer" class="btn btn-outline-success" /></th>
            <form method="post">
                <input type="submit" class="btn btn-success" value="Sorter" asp-page-handler="" /> <br />
                <input type="submit" class="btn btn-success" value="Sorter Navn" asp-page-handler="SortName" /><br />
                <input type="submit" class="btn btn-success" value="Sorter Navn Reverse" asp-page-handler="SortNameDB" /><br />
            </form>
            <th>Navn</th>
            <th>Efternavn</th>
            <th>Kode</th>
            <th></th>
            <th></th>
            </form>
        </tr>
    </thead>
    <tbody>
        @foreach (Kunde k in Model.Kunder)
        {
            <tr>
                <td>@k.KundeId</td>
                <td>@k.Navn</td>
                <td>@k.Efternavn</td>
                <td>@k.Email</td>
                <td>@k.Adresse</td>
                <td>@k.Postnr</td>
                <td><a asp-page="EditKunde" asp-route-nummer="@k.KundeId">Aendre</a></td>
                <td><a asp-page="DeleteKunde" asp-route-nummer="@k.KundeId">Slet</a></td>
            </tr>
        }
    </tbody>
</table>